---
import '../main.css';
const data = Astro.props.data
const title = Astro.props.title || null

---
<div>
<table>
    <thead>
        {
        title && <caption>{title}</caption>
        }
        <tr>
            {Object.keys(data[0]).map(val => <th>{val}</th>)}
        </tr>
    </thead>
    <tbody>
        {data.map((val: any) => 
            <tr>{
                Object.keys(val).map((v: string) => {
                    
                    if(val[v].length > 13){
                        return <td class="text">{val[v]}</td>
                    }else{
                        return <td>{val[v]}</td>
                    }
                })}
            </tr>
        )}
    </tbody>
</table>
</div>